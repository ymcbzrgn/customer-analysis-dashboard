# Database Configuration
# Option 1: For external PostgreSQL server (recommended)
DATABASE_URL=postgresql://postgres:your_password@your_host:5432/customer_analysis_db
DB_HOST=your_host
DB_PORT=5432
DB_NAME=customer_analysis_db
DB_USER=postgres
DB_PASSWORD=your_password

# Option 2: For Docker container setup with host.docker.internal
# DATABASE_URL=postgresql://postgres:postgres_password_2024@host.docker.internal:5432/customer_analysis_db
# DB_HOST=host.docker.internal
# DB_PORT=5432
# DB_NAME=customer_analysis_db
# DB_USER=postgres
# DB_PASSWORD=postgres_password_2024

DB_SCHEMA=public

# Environment
NODE_ENV=development

# JWT Secret for session tokens (generate a strong secret for production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Session Configuration
SESSION_EXPIRE_HOURS=24

# Email Configuration (for password reset, notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@customeranalysis.com

# App Configuration
APP_URL=http://localhost:3000
APP_NAME="Customer Analysis Dashboard"

# Security
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8

# File Upload (for avatars, etc.)
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log